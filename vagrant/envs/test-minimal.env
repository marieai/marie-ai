# Marie-AI Vagrant Test Environment - Minimal Configuration
# Only core infrastructure services, no application services
# Use with: ./bootstrap-marie.sh --vagrant --infrastructure-only

PYTHONUNBUFFERED=1

# ############### Global Configuration ###############

STACK_NAME=vagrant-minimal
PROJECT_NAME=marie

# ############### Network Configuration ###############

MARIE_NETWORK=marie_default

# ############### S3 SERVICE (MinIO) ###############

MINIO_ROOT_USER=marieadmin
MINIO_ROOT_PASSWORD=marietopsecret

MARIE_ACCESS_KEY=MARIEACCESSKEY
MARIE_SECRET_ACCESS_KEY=MARIESECRETACCESSKEY

# ############### PostgreSQL ###############

POSTGRES_VERSION=16
POSTGRES_USER=postgres
POSTGRES_PASSWORD=123456
POSTGRES_HOSTNAME=marie-psql-server
POSTGRES_HOST=marie-psql-server

# ############### RabbitMQ ###############

RABBIT_MQ_HOSTNAME=marie-rabbitmq
RABBIT_MQ_USERNAME=marie
RABBIT_MQ_PASSWORD=rycerz
RABBIT_MQ_PORT=5672

# ############### S3 Storage ###############

S3_ACCESS_KEY_ID=MARIEACCESSKEY
S3_ADDRESSING_STYLE=path
S3_BUCKET_NAME=marie
S3_ENDPOINT_URL=http://marie-s3-server:8000
S3_REGION=us-east-1
S3_SECRET_ACCESS_KEY=MARIESECRETACCESSKEY

# ############### ClickHouse Configuration ###############
# Reduced memory settings for minimal testing

CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_NATIVE_PORT=9000
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DB=marie
CLICKHOUSE_MAX_MEMORY=1000000000
CLICKHOUSE_MAX_MEMORY_USER=750000000
CLICKHOUSE_MEMORY_LIMIT=2G
